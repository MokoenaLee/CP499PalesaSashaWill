<p id="notice"><%= notice %></p>

<div class="container-fluid">
    <h2>Current Rentals</h2>
    <p>
      This page displays all currently rented items.
    </p>
    <p><%= link_to 'Create New Rental', new_rental_path, class: "btn btn-outline-info" %></p>

</div>

<table class = "table table-striped table-hover">
  <thead>
    <tr>
      <th>Renter First Name</th>
      <th>Renter Last Name</th>
      <th>Gear Type</th>
      <th>Rental Date</th>
      <th>Return Date</th>
      <th>Days Used</th>
      <th>On Time Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.first_name%></td>
        <td><%= rental.last_name%></td>
        <td><%= rental.Gear_Type %></td>
        <td><%= rental.rental_date %></td>
        <td><%= rental.return_date %></td>
        <td><%= rental.days_used %></td>
        <td><%= rental.on_time_price %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental), class: "btn btn-outline-success" %></td> 
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container-fluid">
    <%= link_to 'Create New Rental', new_rental_path, class: "btn btn-outline-info" %>
</div>
