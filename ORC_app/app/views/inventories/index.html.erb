<h2>Itemized Inventory</h2>


<p>
<%= link_to 'New Inventory', new_inventory_path %>
</p>

<table>
  <thead>
    <tr>
      <th>Gear type</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Color</th>
      <th>Size</th>
      <th>Serial number</th>
      <th>Gear category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.Gear_Type %></td>
        <td><%= inventory.Brand %></td>
        <td><%= inventory.Model %></td>
        <td><%= inventory.Color %></td>
        <td><%= inventory.Size %></td>
        <td><%= inventory.Serial_Number %></td>
        <td><%= inventory.Gear_Category %></td>
        <td><%= link_to 'Show', inventory %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h2>Bulk Inventory</h2>


<table>
  <thead>
    <tr>
      <th>Gear Type</th>
      <th>Gear Category</th>
      <th>Quantity</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulks.each do |bulk| %>
      <tr>
        <td><%= bulk.Gear_Type %></td>
        <td><%= bulk.Gear_Category %></td>
        <td><%= bulk.quantity %></td>
        <td><%= bulk.notes %></td>
        <td><%= link_to 'Show', inventory %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<<table>
  <<thead>
    <<tr>
      <<th>id</th>
      <<th>gear_type</th>
    </tr>
  </thead>
  <<tbody>
    <% @blahs = Bulk.all_bulk + Inventory.all_it%>
    <% @blahs.each do |blah| %>
    <<tr>
      <<td><%= blah.id %></td>
      <<td><%= blah.Gear_Type %></td>
    </tr>
    <% end %>
  </tbody>
</table>


