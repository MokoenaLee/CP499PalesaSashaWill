<p id="notice"><%= notice %></p>

<h1>Listing Inventories</h1>
<p>
  This page displays all items in inventory.
</p>
<p>
  <a href="http://localhost:3000/rentals">View Rentals</a>
  <a href="http://localhost:3000/users">View Users</a>
</p>

<p>
<%= link_to 'New Inventory', new_inventory_path %>
</p>

<table>
  <thead>
    <tr>
      <th>Bulk</th>
      <th>Gear type</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Color</th>
      <th>Size</th>
      <th>Serial number</th>
      <th>Retail</th>
      <th>Purchase price</th>
      <th>Total spent</th>
      <th>Date purchaseed</th>
      <th>Purchase method</th>
      <th>Reason</th>
      <th>Gear category</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.bulk %></td>
        <td><%= inventory.gear_type %></td>
        <td><%= inventory.brand %></td>
        <td><%= inventory.model %></td>
        <td><%= inventory.color %></td>
        <td><%= inventory.size %></td>
        <td><%= inventory.serial_number %></td>
        <td><%= inventory.retail %></td>
        <td><%= inventory.purchase_price %></td>
        <td><%= inventory.total_spent %></td>
        <td><%= inventory.date_purchaseed %></td>
        <td><%= inventory.purchase_method %></td>
        <td><%= inventory.reason %></td>
        <td><%= inventory.gear_category %></td>
        <td><%= inventory.available %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inventory', new_inventory_path %>
