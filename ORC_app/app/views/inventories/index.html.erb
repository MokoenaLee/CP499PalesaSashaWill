<p id="notice"><%= notice %></p>

<div class="container-fluid">
    <h2 id="itemized">Itemized Inventory</h2>
    <h1></h1>
    <p>
      This page displays all itemized and bulk items in inventory.
    </p>
    <p>
    <%= link_to 'Add New Itemized Item', new_inventory_path, class: "btn btn-outline-info" %>
    <%= link_to 'Add New Bulk Item', new_bulk_path, class: "btn btn-outline-info" %>
    <%= link_to 'Jump To Bulk Inventory', href="#bulk", class:"btn btn-outline-dark" %>
    </p>
</div>

<table class = "table table-striped table-hover">
  <thead>
    <tr>
      <th>Gear type</th>
      <th>Brand</th>
      <th>Size</th>
      <th>Gear Item ID</th>
      <th>Gear category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="itemList">
    <% @inventories.each do |inventory| %>
      <tr data-toggle="modal" data-target="#ItemModal">
        <td><%= inventory.Gear_Type %></td>
        <td><%= inventory.Brand %></td>
        <td><%= inventory.Size %></td>
        <td><%= inventory.blahID %></td>
        <td><%= inventory.Gear_Category %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory), class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container-fluid">
    <h2 id="bulk">Bulk Inventory</h2>
    <p>
        <%= link_to 'Add New Itemized Item', new_inventory_path, class: "btn btn-outline-info" %>
        <%= link_to 'Add New Bulk Item', new_bulk_path, class: "btn btn-outline-info" %>
        <%= link_to 'Jump Up To Itemized Inventory', href="#itemized", class:"btn btn-outline-dark" %>
    </p>
    <h1></h1>
</div>


<table class = "table table-striped table-hover">
  <thead>
    <tr>
      <th>Gear Type</th>
      <th>Gear Category</th>
      <th>Quantity</th>
      <th>Notes</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulks = Bulk.all_bulk %>
    <% @bulks.each do |bulk| %>
      <tr>
        <td><%= bulk.Gear_Type %></td>
        <td><%= bulk.Gear_Category %></td>
        <td><%= bulk.Quantity %></td>
        <td><%= bulk.Notes %></td>
        <td><%= link_to 'Edit', edit_bulk_path(bulk), class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', bulk, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container-fluid">
    <%= link_to 'Add New Itemized Item', new_inventory_path, class: "btn btn-outline-info" %>
    <%= link_to 'Add New Bulk Item', new_bulk_path, class: "btn btn-outline-info" %>
    <%= link_to 'Jump Up To Itemized Inventory', href="#itemized", class:"btn btn-outline-dark" %>
    <%= link_to 'Jump Up To Bulk Inventory', href="#bulk", class:"btn btn-outline-dark" %>
</div>
