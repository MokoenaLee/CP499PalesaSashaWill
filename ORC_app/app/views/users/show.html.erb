<p id="notice"><%= notice %></p>

<div class="container-fluid">
    <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
    </p>
 
  
    <p>
      <strong>Email adress:</strong>
      <%= @user.email_address %>
    </p>

    <p>
      <strong>Student id:</strong>
      <%= @user.student_ID %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @user.phone %>
    </p>
 
    <% if @user.present? %>
      <h5>List of rentals: </h5>
      <% @user.rentals.each do |rental|%>
         <p>
            <strong>Gear Type:</strong>
           <%= rental.Gear_Type%>
          </p>
         <p> 
           <strong>Rental Date</strong>
           <%= rental.rental_date%>
         </p>
         <p>
           <strong>Return Date</strong>
           <%= rental.return_date%>
         </p>
         <p>
           <strong>Days Used</strong>
           <%= rental.days_used%>
         </p>
         <p>
           <strong>Price</strong>
           <%= rental.on_time_price%>
         </p>
      <%end%>
   <%else%>
    <h5> No rentals for this user yet</h5>
   <%end%>
   <br>
  
 <%= mail_to "@rental.email_address", "Send Confirmation Email", cc: "ahlber@coloradocollege.edu", subject: "Your Rental Confirmation", body: "Thank you for renting with us!Your summary is as follows" + @user.student_ID  %>

    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-outline-success" %>
    <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %> 
    <%= link_to 'Back', users_path, class: "btn btn-outline-secondary" %>
</div>
